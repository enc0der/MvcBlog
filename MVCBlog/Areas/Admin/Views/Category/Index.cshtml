
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
@model List<MVCBlog.Areas.Admin.Models.DTO.CategoryVM>

<link href="~/Areas/Admin/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap.min.js"></script>


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Kategori Listesi</h1>

</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Kategori adi,aciklama,ıd ve diğer işlemler</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Kategori adı</th>
                                <th>Açıklama</th>
                                <th>İşlem</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="a_@item.ID">
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <th><a href="/Admin/Category/UpdateCategory/@item.ID">Güncelle</a></th>
                                    <td><img src="~/Areas/Admin/Content/img/delete.png" title="Sil" alt="kategori sil"  style="cursor:pointer;" onclick="Delete(@item.ID)" /></td>
                                </tr>
                            }
                          
                        </tbody>


                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Kategori adı</th>
                                <th>Açıklama</th>
                                <th>İşlem</th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->

<script>

    function Delete(id)
    {
        $.ajax({
            url: "/Admin/Category/DeleteCategory/" + id,
            //data:id,
            type: "POST",
            success: function (data) {
                $("#a_" + id).fadeOut();
            }
        });
    }

</script>


<script>
    $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>