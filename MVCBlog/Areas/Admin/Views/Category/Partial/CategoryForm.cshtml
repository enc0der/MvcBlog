@model MVCBlog.Areas.Admin.Models.DTO.CategoryVM

@using (Html.BeginForm())
{
  
    <div class="box-body">
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Kategori adı" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description)
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @placeholder = "Kategori açıklama" })

            @Html.ValidationMessageFor(m => m.Description)

        </div>


    </div><!-- /.box-body -->
    <div class="box-footer">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
}