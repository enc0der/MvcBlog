
@{
    ViewBag.Title = "AddSiteMenu";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/messages_tr.min.js"></script>
<section class="content-header">
    <h1>
        Site Menü Ekleme
    </h1>

</section>

<section class="content">
    <div class="row">
        <div class="col-md-9">

            @Html.Partial("/Areas/Admin/Views/Shared/Partial/FormMessagePart.cshtml")

            <div class="box box-primary">

                <div class="box-body">
                    <form action="/Admin/SiteMenu/AddSiteMenu" id="frmSiteMenu" method="post">
                        <div class="form-group">

                            <label>Ad</label>
                            <input type="text" name="Name" required class="form-control" />

                        </div>

                        <div class="form-group">

                            <label>Url</label>
                            <input type="text" name="Url" required class="form-control" />

                        </div>

                        <div class="form-group">

                            <label>cssClass</label>
                            <input type="text" name="cssClass" required class="form-control" />

                        </div>

                        <input type="submit" class="btn btn-primary" name="btn" value="Kaydet" />
                    </form>
                </div>

            </div>
          

        </div>
    </div>
</section>

<script>
    $("#frmSiteMenu").validate();

</script>