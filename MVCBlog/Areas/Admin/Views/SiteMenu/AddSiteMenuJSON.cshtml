
@{
    ViewBag.Title = "AddSiteMenuJSON";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}



<section class="content-header">
    <h1>
        Site Menü Ekleme
    </h1>

</section>

<section class="content">
    <div class="row">
        <div class="col-md-9">


            <div class="box box-primary">

                <div class="box-body">
                        <div class="form-group">

                            <label>Ad</label>
                            <input type="text" id="Name" required class="form-control" />

                        </div>

                        <div class="form-group">

                            <label>Url</label>
                            <input type="text" id="Url" required class="form-control" />

                        </div>

                        <div class="form-group">

                            <label>cssClass</label>
                            <input type="text" id="cssClass" required class="form-control" />

                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary">Ekle</button>
                        </div>
                       
                </div>

            </div>


        </div>
    </div>
</section>

<script>
   
    $("button").click(function () {

        var sitemenu = new Object();
        sitemenu.Name = $("#Name").val();
        sitemenu.Url = $("#Url").val();
        sitemenu.Name = $("#cssClass").val();

        $.ajax({
            url: "/Admin/SiteMenu/AddSiteMenuWithJSON",
            data: sitemenu,
            type: 'POST',
            success: function () {
                alert("site menu çallıştu");
            }
        });

    });

</script>

