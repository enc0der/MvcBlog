
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}


@model List<MVCBlog.Areas.Admin.Models.DTO.BlogPostVM>

<link href="~/Areas/Admin/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap.min.js"></script>
<script src="~/Scripts/custom/deleteRecord.js"></script>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Post Listesi</h1>

</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Post İşlemleri</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Kategori adı</th>
                                <th>Başlık</th>
                                <th>İşlem</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="a_@item.ID">
                                    <td>@item.ID</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.Title</td>
                                    <th><a href="/Admin/BlogPost/UpdateBlogPost/@item.ID">Güncelle</a></th>
                                    <td><img src="~/Areas/Admin/Content/img/delete.png" title="Sil" alt="kategori sil" style="cursor:pointer;" onclick="Delete('/Admin/BlogPost/DeleteBlogPost/',@item.ID)" /></td>
                                </tr>
                            }

                        </tbody>


                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Kategori adı</th>
                                <th>Başlık</th>
                                <th>İşlem</th>
                                <th>İşlem</th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->

<script>
    $(function () {

        $('#example').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true
        });
    });
</script>
