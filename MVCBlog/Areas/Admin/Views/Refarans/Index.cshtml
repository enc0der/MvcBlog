
@{
    ViewBag.Title = "Refarans Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model List<MVCBlog.Areas.Admin.Models.DTO.RefaransVM>

<link href="~/Areas/Admin/Content/css/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap.min.js"></script>
<script src="~/Scripts/custom/deleteRecord.js"></script>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Refarans Listesi</h1>
    @Html.ActionLink("Refarans Ekle", "AddRefarans", null, new { @class = "btn btn-success" })
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Refarans İşlemleri</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Refarans Adı</th>
                                <th>Durumu</th>
                                <th>İşlem</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="a_@item.ID">
                                    <td>@item.ID</td>
                                    <td>@item.RefaransAdi</td>
                                    <td>@item.isActive</td>
                                    <th><a href="/Admin/Refarans/UpdateRefarans/@item.ID">Güncelle</a></th>
                                    <td><img src="~/Areas/Admin/Content/img/delete.png" title="Sil" alt="hizmet sil" style="cursor:pointer;" onclick="Delete('/Admin/Refarans/DeleteRefarans/',@item.ID)" /></td>
                                </tr>
                            }

                        </tbody>

                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Refarans Adı</th>
                                <th>Durumu</th>
                                <th>İşlem</th>
                                <th>İşlem</th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->



<script>
    $(function () {
        $('#example1').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true
        });
    });
</script>



